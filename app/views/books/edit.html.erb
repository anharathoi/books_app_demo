<%= form_for @book, url: update_book_path(@book), html: {class: "edit-form"},:action => "update" do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :authors %>
  <%= collection_select(:book, :author_ids, Author.all, :id, :name, {}, { :multiple => true } )%>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit 'Update book', class: 'btn btn-primary' %>
<% end %>
